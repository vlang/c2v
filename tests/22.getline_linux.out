@[translated]
module main

fn main() {
	input := (unsafe { nil })
	len := 0
	read := isize(0)
	C.printf(c'Enter text (Ctrl+D to quit):\n')
	read = C.getline(&input, &len, C.stdin)
	if read != -1 {
		C.printf(c'Entered: %s', input)
	} else {
		C.printf(c'error reading input\n')
	}
	C.free(input)
	return
}
